                                   MouseLeave="UserAgreementTB_MouseLeave"
                                   TextDecorations="Underline"
                                   Text="пользовательского соглашения"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#6DB2E3"
                                   Grid.Row="6"/>
                            <CheckBox Style="{StaticResource SimpleCheckBoxStyle}"
                                    x:Name="RuleAcceptCB"
                                    Margin="0 0 422 0"
                                    Grid.Row="6"
                                    Background="#393A41" 
                                    Checked="RuleAcceptCB_Checked" 
                                    Unchecked="RuleAcceptCB_Unchecked"
                                    Content=" " 
                                    Tag="✔"/>
                            <!-- Кнопка регистрации -->
                            <Button Width="200"
                                    x:Name="UserRegistrationButton"
