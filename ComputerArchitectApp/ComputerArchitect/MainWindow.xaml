                        <!-- Контейнер авторизации -->
                        <Grid x:Name="AuthorizationContainer"  Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="40"/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition Height="100"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <!-- Приветствие -->
                            <Label Content="Добро пожаловать"
                                   HorizontalAlignment="Center"
                                   FontFamily="arial"
                                   FontWeight="Bold"
                                   Foreground="#D6D6D6"
                                   FontSize="30"
                                   VerticalAlignment="Center"
                                   Grid.Row="2"/>


                            <!-- Почта -->
                            <TextBox Grid.Row="3"
                                   Style="{StaticResource SimpleTextBox}"
                                   x:Name="UserAuthorizationEmailTextBox"
                                   GotFocus="UserAuthorizationEmailTextBox_GotFocus"
                                   LostFocus="UserAuthorizationEmailTextBox_LostFocus"
                                   TextChanged="UserAuthorizationEmailTextBox_TextChanged"
                                   Tag="Email"
                                   MaxLength="50"
                                   Margin="0 0 0 0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Width="449" 
                                   Height="44">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <Label Grid.Row="3" 
                                   Width="380"
                                   Margin="0 0 60 0"
                                   Foreground="#CD6565"
                                   FontFamily="arial"
                                   x:Name="EmailAuthorizationErrorMsg"
