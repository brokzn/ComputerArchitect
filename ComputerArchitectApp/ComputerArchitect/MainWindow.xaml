                                   Height="25"/>
                            <Label Grid.Row="3" 
                                   Width="380"
                                   Margin="0 0 60 0"
                                   Foreground="#CD6565"
                                   FontFamily="arial"
                                   x:Name="EmailAuthorizationErrorMsgEnter"
                                   Visibility="Collapsed"
                                   Content="Введите почту"
                                   VerticalAlignment="Bottom"
                                   Height="25"/>


