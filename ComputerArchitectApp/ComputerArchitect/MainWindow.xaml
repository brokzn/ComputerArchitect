                                   Margin="400 0 0 0" 
                                   Width="26"
                                   Panel.ZIndex="2"
                                   Visibility="Collapsed"
                                   Height="16" 
                                   Source="\UI\Elements\OpenEye.png"/>

                            <TextBox Grid.Row="4"
                                     Style="{StaticResource SimpleTextBox}"
                                     Tag="Пароль" 
                                     x:Name="UserPasswordAuthorizationTextBox"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Width="449"
                                     MaxLength="25"
                                     GotFocus="UserPasswordAuthorizationTextBox_GotFocus"
                                     LostFocus="UserPasswordAuthorizationTextBox_LostFocus"
                                     Height="44">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <PasswordBox 
                                    MaxLength="25"
                                    Grid.Row="4"  
                                    Style="{StaticResource SimplePasswordBox}"
                                    Visibility="Collapsed"
                                    PasswordChanged="UserPasswordAuthorizationPasswordBox_PasswordChanged"
                                    LostFocus="UserPasswordAuthorizationPasswordBox_LostFocus"
                                    x:Name="UserPasswordAuthorizationPasswordBox"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Width="449" 
                                    Height="44"/>

                            <Label Grid.Row="4" 
                                    Width="380"
                                    Margin="0 0 60 0"
                                    Foreground="#CD6565"
                                    FontFamily="arial"
                                    x:Name="PasswordAuthorizationErrorMsgEnter"
                                    Visibility="Collapsed"
                                    Content="Введите пароль"
                                    VerticalAlignment="Bottom"
                                    Height="25"/>
                            <!-- Восстановление пароля -->
                            <TextBlock 
                                    x:Name="UserResetPasswordTB"
                                    Margin="0 0 0 0"
                                    FontFamily="Arial"
                                    FontSize="14"
                                              FontWeight="Bold"
                                    TextDecorations="Underline"
                                    Text="Забыли пароль?"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Foreground="#6DB2E3"
                                    Grid.Row="5"/>
                            <!-- Кнопка авторизации -->
                            <Button Width="200"
                                    Margin="0 0 0 30"
                                    Click="UserAuthorizationButton_Click"
                                    x:Name="UserAuthorizationButton"
                                    IsEnabled="False"
                                    Style="{StaticResource SimpleButton}"
                                    Content="Войти"
                                    Height="55"
                                    Grid.Row="7"/>
                        </Grid>

                    </Grid>

                </Grid>

            </Grid>
