                       Grid.Row="1" 
                       Grid.Column="1"/>
                <Border Grid.Row="1" 
                        Grid.Column="1" 
                        Background="#26262C" 
                        Opacity="1" 
                        CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" 
                                          BlurRadius="30" 
                                          Color="Black" 
                                          Opacity="0.2"/>
                    </Border.Effect>
                </Border>
                <!--  Пользовательского соглашение -->
                <ScrollViewer
             
             Grid.Row="1" 
                       Margin="0 20 0 0"
                       Panel.ZIndex="2"
                    Grid.Column="1"  Background="Transparent" Width="980" Height="500" VerticalAlignment="Center" 
                   VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" Width="880" FontSize="14">
                 <Bold Foreground="#D6D6D6" FontSize="20">1. Сборка конфигурации компьютера</Bold>   
