                                    <Label Content="Корпуса" 
                                           Style="{StaticResource CatalogLabelStyle}"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="0" 
                          Grid.Column="5">
                        <Border Style="{StaticResource CatalogBorderStyle}">
                            <StackPanel>
                                <Grid Height="285">
                                    <Image Source="\UI\ComponentsPreviewImages\BasicPCC\image vint.png" 
                                           Style="{StaticResource CatalogImageStyle}"/>
                                    <Label Content="Охлаждение компьютера" 
                                           Style="{StaticResource CatalogLabelStyle}"/>
                                </Grid>
                            </StackPanel>
                        </Border>
