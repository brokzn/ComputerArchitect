                    <Grid Grid.Row="0" 
                          Grid.Column="5">
                        <Border Style="{StaticResource CatalogBorderStyle}">
                            <StackPanel>
                                <Grid Height="285">
                                    <Image Source="\UI\ComponentsPreviewImages\BasicPCC\image gpu.png" 
                       Style="{StaticResource CatalogImageStyle}"/>
                                    <Label Content="Видеокарты" 
