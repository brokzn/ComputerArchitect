                                    <Label Content="Блоки питания" 
                                           Style="{StaticResource CatalogLabelStyle}"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="0" 
                          Grid.Column="3">
                        <Border Style="{StaticResource CatalogBorderStyle}">
                            <StackPanel>
                                <Grid Height="285">
                                    <Image Source="\UI\ComponentsPreviewImages\BasicPCC\image box.png" 
