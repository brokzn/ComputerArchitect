                        <ColumnDefinition Width="285"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="285"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="285"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0" 
                          Grid.Column="1">
