            <Label Grid.Column="0" 
               FontFamily="Arial"
               FontSize="30"
               Margin="0 0 0 20"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               Foreground="#D6D6D6"
               FontWeight="Bold"
               Content="Основные комплектующие для ПК"/>
