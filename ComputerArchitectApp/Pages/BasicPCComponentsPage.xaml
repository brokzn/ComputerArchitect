                        <RowDefinition Height="285"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="285"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="285"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="285"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="285"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0"
                          Grid.Column="1">
                        <Border Name="OpenCPUPageCard" MouseLeftButtonDown="OpenCPUPageCard_MouseLeftButtonDown" 
                                Style="{StaticResource CatalogBorderStyle}">
                            <StackPanel>
                                <Grid Height="285">
                                    <Image Source="\UI\ComponentsPreviewImages\BasicPCC\image cpu.png" 
                                           Style="{StaticResource CatalogImageStyle}"/>
