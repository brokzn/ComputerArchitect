               HorizontalAlignment="Left"
               Foreground="#D6D6D6"
               FontWeight="Bold"
               Content="Каталог >"/>
            <Label Grid.Column="0" 
               FontFamily="Arial"
               FontSize="12"
               Margin="62 26 0 20"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Foreground="#D6D6D6"
               FontWeight="Bold"
               Name="CatalogPageOpenLabel"
               MouseEnter="CatalogPageOpenLabel_MouseEnter"
               MouseLeave="CatalogPageOpenLabel_MouseLeave"
               PreviewMouseLeftButtonDown="CatalogPageOpenLabel_PreviewMouseLeftButtonDown"
               Content="Комплектующие для пк"/>
            <Label Grid.Column="0" 
               FontFamily="Arial"
               FontSize="12"
               Width="230"
               Margin="207 26 0 20"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Foreground="#D6D6D6"
               FontWeight="Bold"
               Content="> Основные комплектующие для ПК"/>  
        </Grid>


        <ScrollViewer
         Grid.Row="1"
         Background="Transparent"
        Width="1250"
         Margin="0 20 0 75"
         VerticalAlignment="Center" 
         VerticalScrollBarVisibility="Auto" 
         HorizontalScrollBarVisibility="Disabled">
            <StackPanel Width="1200">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                </Grid>
                <Grid Grid.Row="0">
