                    x:Name="EndingPSButton"
                    Click="EndingPSButton_Click"
                    FontSize="12"
                    Margin="20 0 0 0"
                    Grid.Row="8"
                    Style="{StaticResource Simple3Button}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
