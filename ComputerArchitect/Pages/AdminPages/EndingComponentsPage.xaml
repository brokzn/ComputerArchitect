                <DataTemplate>
                    <Grid Grid.Row="1"
                          Height="80"
                          Width="885"      
                          Grid.Column="1">
                        <Border Background="#4B4C52"
                                Name="CPUBorder"
                                Style="{StaticResource CatalogBorderStyle}"
                                CornerRadius="5">
                            <Grid>
                                <Image Width="50"
                                       Stretch="Fill"
                                       Source="{Binding Preview_Photo}"
                                       Margin="22 0 0 0"
                                       Height="50"
                                       HorizontalAlignment="Left"/>
                                <TextBlock   
                                           FontFamily="Arial"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           TextAlignment="Left"
                                           TextWrapping="Wrap"
                                           Width="490"
                                           Height="40"
                                           Margin="100 20 0 0"
                                           Foreground="#D6D6D6"
                                           FontSize="16">
