<Page x:Class="ComputerArchitect.Pages.AdminPages.EndingComponentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerArchitect.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EndingComponentsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Name="DialogBack"
                Background="#131316"   
                Panel.ZIndex="2" 
                Opacity="0.8"
                Grid.ColumnSpan="2"
                Visibility="Collapsed"
                Grid.RowSpan="2">
        </Border>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Width="192"
                    x:Name="EndingCPUButton"
                    Click="EndingCPUButton_Click"
                    FontSize="12"
                    Margin="20 0 0 0"
                    Grid.Row="1"
                    Style="{StaticResource Simple3Button}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Процессоры"
                    Height="35"/>
            <Button Width="192"
                    x:Name="EndingMotherboardButton"
                    Click="EndingMotherboardButton_Click"
                    FontSize="12"
                    Margin="20 0 0 0"
                    Grid.Row="2"
                    Style="{StaticResource Simple3Button}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Мат. платы"
                    Height="35"/>
            <Button Width="192"
                    x:Name="EndingCaseButton"
                    Click="EndingCaseButton_Click"
                    FontSize="12"
                    Margin="20 0 0 0"
                    Grid.Row="3"
                    Style="{StaticResource Simple3Button}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Корпуса"
                    Height="35"/>
            <Button Width="192"
                    x:Name="EndingGPUButton"
                    Click="EndingGPUButton_Click"
                    FontSize="12"
                    Margin="20 0 0 0"
                    Grid.Row="4"
                    Style="{StaticResource Simple3Button}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Видеокарты"
                    Height="35"/>
            <Button Width="192"
                    x:Name="EndingCoolerButton"
                    Click="EndingCoolerButton_Click"
                    FontSize="12"
                    Margin="20 0 0 0"
                    Grid.Row="5"
                    Style="{StaticResource Simple3Button}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Охл. процессора"
                    Height="35"/>
            <Button Width="192"
                    x:Name="EndingRAMButton"
                    Click="EndingRAMButton_Click"
                    FontSize="12"
                    Margin="20 0 0 0"
                    Grid.Row="6"
                    Style="{StaticResource Simple3Button}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="ОЗУ"
                    Height="35"/>
            <Button Width="192"
                    x:Name="EndingMemoryButton"
                    Click="EndingMemoryButton_Click"
                    FontSize="12"
                    Margin="20 0 0 0"
                    Grid.Row="7"
                    Style="{StaticResource Simple3Button}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="ЖД"
                    Height="35"/>
