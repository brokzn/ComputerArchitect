        <Grid Name="AddDialog"
              Height="200" 
              Width="300" 
              Visibility="Collapsed" 
              Grid.ColumnSpan="2"
              Panel.ZIndex="2" 
              Grid.RowSpan="2">
            <Border Background="#42424B" 
                    Opacity="1" 
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border Background="#6DB2E3" 
                            CornerRadius="5 5 5 5"
                            Opacity="1"  />
                    <Label
                            Grid.Column="1" 
                            Content="Добавить на склад"
                            VerticalAlignment="Center"
                            Margin="10 0 0 0"
                            HorizontalContentAlignment="Left"
                            HorizontalAlignment="Left"
                            Foreground="White" 
                            FontFamily="Arial" 
                            FontSize="16" 
                            FontWeight="Bold"/>
                    <Label  Grid.Column="1" Grid.Row="1" 
                            VerticalAlignment="Top"
                            Margin="0 15 0 0"
                            Width="280"
                            HorizontalContentAlignment="Center"
                            HorizontalAlignment="Center"
                            Foreground="#D6D6D6" 
                            FontFamily="Arial" 
                            FontSize="14" 
                            FontWeight="Bold">
                        <TextBlock Text="Введите количество" 
                                   TextWrapping="Wrap" TextAlignment="Center"/>
                    </Label>

                    <TextBox Grid.Row="1"
                             Style="{StaticResource UserInfoTextBox}"
                             x:Name="AddCountTB"
                             Margin="0 0 0 20"
                             MaxLength="30"
                             Tag="Количество в шт."
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Width="250" 
                             Height="44">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>


                    <Button Width="120"
                            x:Name="AddCountButton"
                            Click="AddCountButton_Click"
                            Margin="0 0 130 10"
                            IsEnabled="True"
                            HorizontalAlignment="Center"    
                            VerticalAlignment="Bottom"
                            Foreground="White" 
                            FontSize="14"
                            Grid.Row="1"
                            Style="{StaticResource SimpleButton}" 
                            Height="40" 
                            Content="Добавить"/>
                    <Button Width="120"
                            x:Name="CloseDialogButton"
                            Click="CloseDialogButton_Click"
                            Margin="130 0 0 10"
                            IsEnabled="True"
                            HorizontalAlignment="Center"    
                            VerticalAlignment="Bottom"
                            Foreground="White" 
                            FontSize="14"
                            Grid.Row="1"
                            Style="{StaticResource Simple2Button}" 
                            Height="40" 
                            Content="Назад"/>
                </Grid>
            </Border>
        </Grid>

