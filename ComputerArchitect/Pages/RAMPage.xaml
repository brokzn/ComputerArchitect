                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <RadioButton Width="220"
                     IsChecked="True"
                     Checked="MostCheapestSort_Checked"
                     Name="MostCheapestSort"
                     Margin="10 0 0 0 "
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Content="Сначала недорогие" 
                     Style="{StaticResource CustomRadio2ButtonStyle}" 
                     Grid.Row="0"/>
                    <RadioButton Width="220"
                    Checked="MostValueableSort_Checked"
                    Name="MostValueableSort"
                    Margin="10 0 0 0 "
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Content="Сначала дорогие" 
                    Style="{StaticResource CustomRadio2ButtonStyle}" 
                    Grid.Row="1"/>
                </Grid>
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" 
                      BlurRadius="20" 
                      Color="Black" 
                      Opacity="0.3"/>
                </Border.Effect>
            </Border>
            
            



            <TextBox Tag="Поиск по категории"
                     TextChanged="SearchInCategoryTextBox_TextChanged"
                     Name="SearchInCategoryTextBox"
                     Style="{StaticResource TextBoxSearchInCategory}">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>


            <ListBox x:Name="ComponentListBox"
                     BorderThickness="0"
                     Grid.Row="1"
                     Visibility="Visible"
                     Margin="0 20 0 20"
                     Background="Transparent"
                     Width="894"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Right"
                     Grid.Column="1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Grid.Row="1"
                  Height="180"
                 Width="850"
                              
                  Grid.Column="1">
                            <Border Background="#4B4C52" CornerRadius="5">
                                <Grid>

                                    <Image Width="150"
                                           Stretch="Uniform"
                           Source="{Binding Rams.Preview_Photo}"
                           Margin="22 0 0 0"
                           Height="150"
                           HorizontalAlignment="Left"/>
                                    <TextBlock
                                   FontFamily="Arial"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   TextAlignment="Left"
                                   TextWrapping="Wrap"
                                   Width="490"
                                   Height="100"
                                   Margin="195 20 0 0"
                                   Foreground="#D6D6D6"
                                   FontSize="16">
                                        <Run Text="Оперативная память"/>
                                        <Run Text="{Binding Rams.RAM_Model}"/>
                                        <Run Text="[" />
                                        <Run Text="{Binding MemoryType.Memory_typeName}"/>
                                        <Run Text="," />
                                        <Run Text="{Binding Rams.Capacity_GB, StringFormat=' {0} ГБ,'}"/>
                                        <Run Text="{Binding Rams.RAM_Speed_MHz, StringFormat=' {0} МГц,'}"/>
                                        <Run Text="{Binding Rams.CAS_Latency}"/>
                                        <Run Text="-" />
                                        <Run Text="{Binding Rams.RAS_to_CAS_Delay}"/>
                                        <Run Text="-" />
                                        <Run Text="{Binding Rams.Row_Precharge_Delay}"/>
                                        <Run Text="-" />
                                        <Run Text="{Binding Rams.Activate_to_Precharge_Delay}"/>
                                        <Run Text="]" />
                                        
                                    </TextBlock>

                                    <TextBlock Text="В наличии:"
                                   FontFamily="Arial"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom"
                                   Width="100"
                                   Height="21"
                                   Margin="195 0 0 22"
                                   Foreground="#D6D6D6"
                                   FontSize="18"/>
                                    <TextBlock Text="{Binding Rams.RAM_Count_on_storage, StringFormat=' {0} штук'}"
                                   FontFamily="Arial"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom"
                                   Width="150"
                                   Height="21"
                                   Margin="300 0 0 22"
                                   Foreground="#6DB2E3"
                                   FontSize="18"/>
                                    <Button Width="100"
                                            x:Name="AddToCartRAMButton"
                                            Click="AddToCartRAMButton_Click"
                                            Loaded="AddToCartRAMButton_Loaded"
                                            Style="{StaticResource Simple3Button}"
                                    Margin="0 0 15 0"
                                    HorizontalAlignment="Right"
                                    Content="Купить"
                                    Height="45"/>
                                    <Button Width="100"
                                            x:Name="DeleteSelectedRAMButton"
                                            Loaded="DeleteSelectedRAMButton_Loaded"
                                            Visibility="Collapsed"
                                            Click="DeleteSelectedRAMButton_Click"
                                            Style="{StaticResource RedButton}"
                                            Margin="0 100 15 0"
                                            HorizontalAlignment="Right"
                                            FontSize="12"
                                            Content="Удалить"
                                            Height="30"/>
                                    <TextBlock Text="{Binding Rams.Cost, StringFormat={}{0:N0} ₽}"
                                   FontFamily="Arial"
                                   FontWeight="Bold"
                                   TextAlignment="Right"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Width="300"
                                   Height="20"
                                   Margin="0 0 19 90"
                                   Foreground="#D6D6D6"
                                   FontSize="20"/>
                                </Grid>
                            </Border>

                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Margin" Value="0 0 0 20"/>
                        <Setter Property="Padding" Value="0 0 0 0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Border x:Name="brd" Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter Margin="{TemplateBinding Padding}" Content="{TemplateBinding Content}" 
                                          ContentTemplate="{TemplateBinding ContentTemplate}" 
                                          ContentStringFormat="{TemplateBinding ContentStringFormat}" 
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                          RecognizesAccessKey="True"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
    </Grid>
</Page>

