            </Viewbox>

            <TextBlock Text="Computer"
                       Panel.ZIndex="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" 
                       Margin="36 0 0 0"
                       FontFamily="Arial" 
                       FontWeight="Bold" 
                       FontSize="8"
                       Foreground="#D9D9D9"/>
            <TextBlock Text="Architect"
                       Panel.ZIndex="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" 
                       Margin="74 0 0 0"
                       FontFamily="Arial" 
                       FontWeight="Bold" 
                       FontSize="8"
                       Foreground="#6DB2E3"/>

            <Button Margin="0 0 0 0" 
             Height="30" 
             Width="40" 
             VerticalAlignment="Top" 
             HorizontalAlignment="Right" 
             Panel.ZIndex="2"  
             BorderThickness="0"
             Background="Transparent"
             x:Name="СloseAppButton"
             Click="СloseAppButton_Click"
             Style="{StaticResource CloseAppButton}">
                <StackPanel>
                    <Image Source="\UI\WindowTools\closeApp.png" Margin="0 0 0 0" Width="11" Height="11"/>
                </StackPanel>
            </Button>
            <Button Margin="0 0 80 0" 
             Height="30" Width="40" 
             VerticalAlignment="Top" 
             HorizontalAlignment="Right" 
             Panel.ZIndex="2" 
             Background="Transparent" 
             BorderThickness="0"
             x:Name="TrayAppButton"
             Click="TrayAppButton_Click"
             Style="{StaticResource TrayAppButton}">
                <StackPanel>
                    <Image Source="\UI\WindowTools\trayApp.png" Margin="0 0 0 0" Width="11" Height="11"/>
                </StackPanel>
            </Button>
            <Button Visibility="Visible"
             Margin="0 0 40 0" 
             Height="30" Width="40" 
             VerticalAlignment="Top" 
             HorizontalAlignment="Right" 
             Panel.ZIndex="2" 
             Background="Transparent" 
             BorderThickness="0"
             Name="ResizeClick"
             Click="ResizeClick_Click"
             Style="{StaticResource TrayAppButton}">
                <Image Width="15" Height="15" Source="\UI\WindowTools\maxApp.png"/>

            </Button>
            <Button Visibility="Hidden"
             Margin="0 0 40 0" 
             Height="30" Width="40" 
             VerticalAlignment="Top" 
             HorizontalAlignment="Right" 
             Panel.ZIndex="2" 
             Background="Transparent" 
             BorderThickness="0"
             Name="Resize2Click"
             Click="Resize2Click_Click"
             Style="{StaticResource TrayAppButton}">
                <Image Width="15" Height="15" Source="\UI\WindowTools\minApp.png"/>
            </Button>
            <!-- Затемнение -->
            <Rectangle x:Name="BlureRectangle" 
                       Visibility="Collapsed"  
                       Grid.Row="1" Opacity="0.8" 
                       Fill="#131316" 
                       Panel.ZIndex="2"/>
            <!-- Стартовая страница -->
            <Grid Grid.Row="1" Visibility="Visible" Panel.ZIndex="1" Name="MainContainer">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="680"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
